@model Rental2.ViewModels.PaymentViewModel

@{
    ViewData["Title"] = "Rent Payment";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h2>Rent Payment</h2>
    <fieldset class="payment-form">
        <legend>Payment Information</legend>
        <p>
            <div class="editor-label">@Html.LabelFor(m => m.Name)</div>
            <div class="editor-field">@Html.EditorFor(m => m.Name)</div>
        </p>
        <p>
            <div class="editor-label">@Html.LabelFor(m => m.PostalCode)</div>
            <div class="editor-field">@Html.EditorFor(m => m.PostalCode)</div>
        </p>
        <p>
            <div class="editor-label">@Html.LabelFor(m => m.TotalPayment)</div>
            <div class="editor-field">@Html.EditorFor(m => m.TotalPayment)</div>
        </p>        
        <p>
            <div class="editor-label">@Html.LabelFor(m => m.CreditCardNumber)</div>
            <div class="editor-field">@Html.EditorFor(m => m.CreditCardNumber)</div>
        </p>
        <p>
            <div class="editor-label">@Html.LabelFor(m => m.Cvv)</div>
            <div class="editor-field">@Html.EditorFor(m => m.Cvv)</div>
        </p>
        <p>
            <div class="editor-label">@Html.LabelFor(m => m.Month)</div>
            <div class="editor-field">@Html.EditorFor(m => m.Month)</div>
        </p>
        <p>
            <div class="editor-label">@Html.LabelFor(m => m.Year)</div>
            <div class="editor-field">@Html.EditorFor(m => m.Year)</div>
        </p>
    </fieldset>
    <input class="submit-button" type="submit"/>
}
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        var clientToken = "";
        braintree.setup(clientToken, "dropin", { container: "payment-form" });
    </script>
}
