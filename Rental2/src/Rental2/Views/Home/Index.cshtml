@{
    ViewData["Title"] = "Home Page";
}
<h1 align="center">Welcome to Milwaukee Rental Company</h1><br /><br />
<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/skyline-1108560_1280.jpg" alt="skyline" class="img-responsive" />
            <div class="carousel-caption">
                <p>
                    Learn how to build ASP.NET apps that can run anywhere.
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/livingroom-1032733_1280.jpg" alt="living room" class="img-responsive" />
            <div class="carousel-caption">
                <p>
                    There are powerful new features in Visual Studio for building modern web apps.
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/real-estate-325285_1280.jpg" alt="house" class="img-responsive-2" />
            <div class="carousel-caption">
                <p>
                    Bring in libraries from NuGet, Bower, and npm, and automate tasks using Grunt or Gulp.
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<br /><br />

<div class="row">
    <div class="col-md-4">
        <h2>Find a Place to Live</h2>
        <ul>
            <li>Explore locations, details, and pictures</li>
            <li>Make tour requests</li>
            <li>Click the "Properties" link to begin</li>
        </ul>
    </div>
    <div class="col-md-4">
        <h2>Online Functions</h2>
        <ul>
            <li>Pay rent online</li>
            <li>View payment history</li>
            <li>Make service requests</li>
            <li>Existing tenants, log in to access your information</li>
        </ul>
    </div>
    <div class="col-md-4">
        <h2>Further Information</h2>
        <p>
            Feel free to contact us using the "Contact" link to inquire about properties, further questions, or anything. A representative from
        our company will contact you shortly.</p>
    </div>
</div>
